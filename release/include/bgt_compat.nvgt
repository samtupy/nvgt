// legacy generate_profile
bool generate_profile(const string& in filename) {
	string r = generate_profile();
	if (r == "") return false;
	file f;
	if (!f.open(filename, "wb")) return false;
	bool success = f.write(r) == r.length();
	f.close();
	return success;
}

