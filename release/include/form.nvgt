		double freq = progress;
		freq = pow(2, double((freq + 1) / 100 * 6));
		freq *= 55;
		frequency = freq;
		//beep.reset();
		//beep.waveform_type = 4;
		//beep.freq_ms(frequency,40);
		//@bar=beep.write_wave_sound();
